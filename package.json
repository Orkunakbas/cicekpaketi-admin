{
  "name": "cms-project",
  "version": "1.0.0",
  "description": "CMS with Express.js API and Next.js Admin Panel",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run admin:dev\"",
    "server:dev": "nodemon server.js",
    "admin:dev": "cd admin && npm run dev",
    "start": "node server.js",
    "build": "cd admin && npm run build",
    "prod": "npm run build && npm start",
    "plesk:setup": "npm install && cd admin && npm install && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sequelize": "^6.35.0",
    "mysql2": "^3.6.5",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
} 