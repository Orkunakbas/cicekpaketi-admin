{
  "name": "cms-project",
  "version": "1.0.0",
  "description": "CMS with Express.js API and Next.js Admin Panel",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run admin:dev\"",
    "server:dev": "nodemon server.js",
    "admin:dev": "cd admin && npm run dev",
    "start": "node server.js",
    "admin:install": "cd admin && npm install",
    "admin:build": "cd admin && npm run build",
    "admin:start": "cd admin && npm start"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.6.5",
    "sequelize": "^6.35.0",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
